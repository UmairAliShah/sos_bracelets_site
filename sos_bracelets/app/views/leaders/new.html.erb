<% content_for :title, "Make Leader Profile | SOS Bracelets" %>
<div class="container-fluid" style="padding-top: 37px;">
  <div class="row">
    <div class="col-md-12 no-pad-xs">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h3 class="heading_text">Create Your Leader Profile</i></h3></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-bottom:1em; background-color: rgba(255,255,255,0.9); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-12">
            <center>
              <%= form_for :leader, url: leaders_path, :html => {multipart: true, class: "form-horizontal center"} do |f| %>
                <% if @leader.errors.any? %>
                  <div class="form-group alert alert-error alert-block" id="error_explanation">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <h5 class="heading_error"><%= pluralize(@leader.errors.count, "error") %> prohibited this LEADER PROFILE from being saved:</h5>
                    <% @leader.errors.full_messages.each do |msg| %>
                        <h6 class="heading_error"><%= msg%></h6>
                    <% end %>
                  </div>
                <%end%>
                <div class="row">
                  <center>
                    <div class="container">
                      <div class="modal fade" id="addPhoto">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <!-- Header -->
                            <div class="modal-header" style="background: #2DBF7F;">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <center><h4 class="heading_text">Choose Avatar</h4></center>
                            </div>
                            <!-- Body (form) -->
                            <div class="modal-body">
                              <div class="form-group">
                                <div class="row">
                                  <div class="col-md-12">
                                    <center>
                                      <%= image_tag("user.png", {id: "postimg", style: "width:250px;height:250px;",class: "img-thumbnail img-circle",alt: "User Profile Image"}) %>
                                      <h4 class="heading_text" style="font-style: italic;color:#2DBF7F;font-weight:normal;">Preview</h4>
                                      <div class="row">
                                        <center>
                                          <%= f.file_field :avatar, id:"post-upload",class: "btn btn-info" %>
                                          <button type="button" class="btn btn-success" data-dismiss="modal" style="margin-top:1em;">Save</button>
                                        </center>
                                      </div>
                                    </center>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <center><button type="button" class="btn btn-danger" data-dismiss="modal" style="color:#C0392B;">Close</button></center>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </center>
                </div>
                <div class="row">
                  <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                      <center>
                        <%= image_tag("user.png", {id: "team_image",  style: "width:220px;height:220px;",class: "img-responsive img-thumbnail img-circle",alt: "User Profile Image"}) %>
                        <br>
                        <input data-toggle="modal" data-target="#addPhoto" class="btn btn-block btn-info" type="button" value="Add Avatar">
                      </center>
                    </div>
                  </div>
                  <div class="col-xs-12 col-md-8">
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :firstname, "First Name",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.text_field :firstname, autofocus: true, placeholder: 'Enter First Name', class: 'form-control my_text_field', style:"color: #1E8449;",required: true%>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :lastname, "Last Name",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.text_field :lastname, autofocus: true, placeholder: 'Enter Last Name', class: 'form-control my_text_field', style:"color: #1E8449;",required: true%>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :weight, "Weight (lb)",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.number_field :weight, autofocus: true, placeholder: 'Enter Weight in lb', class: 'form-control my_text_field', style:"color: #1E8449;" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :dob, "Date of Birth",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.date_select :dob,  {start_year:1950, prompt: true}, {class: "form-control my_text_field", style:"color: #1E8449;display:inline-block;width:32%;"} %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :phone, "Phone",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <div class="row">
                          <div class="col-xs-12 col-md-6">
                            <%= f.country_select :country, {prompt: "Select Country"}, {class: "form-control my_text_field", style:"color: #1E8449;", required: true} %>
                          </div>
                          <div class="col-xs-12 col-md-6">
                            <%= f.number_field :phone, autofocus: true, placeholder: 'Enter Phone Number', class: 'form-control my_text_field', style:"color: #1E8449;", required: true%>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :gender, "Gender",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.collection_select :gender, Gender.all, :name, :name, {prompt: "Select Gender"}, {class: 'form-control my_text_field', style:"color: #1E8449;"} %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :blood, "Blood Group",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.collection_select :blood, Blood.all, :name, :name, {prompt: "Select Blood Group"}, {class: 'form-control my_text_field', style:"color: #1E8449;"} %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :hair, "Hair Color",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.collection_select :hair, Hair.all, :name, :name, {prompt: "Select Hair Color"}, {class: 'form-control my_text_field', style:"color: #1E8449;"} %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :eye, "Eye Color",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.collection_select :eye, Eye.all, :name, :name, {prompt: "Select Eye Color"}, {class: 'form-control my_text_field', style:"color: #1E8449;"} %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-3">
                        <%= f.label :height, "Height (feet)",class: "login_signup_label" %>
                      </div>
                      <div class="col-md-9">
                        <%= f.collection_select :height, Height.all, :name, :name, {prompt: "Select Height"}, {class: 'form-control my_text_field', style:"color: #1E8449;"} %>
                      </div>
                    </div>
                  </div>
                </div>


              <div class="form-group login_signup_heading" style="padding:0px;margin:0px;">
                <div class="col-md-12">
                  <center><h5 class="heading_text">Select a Team for this Leader</h5></center>
                </div>
              </div>
                <% @count = 0 %>
                <% @team_profiles.each do |tp|%>
                  <% if tp.leader == nil%>
                    <% @count = @count + 1 %>
                    <div class="form-group login_signup_panel" style="padding:0px;margin:0px;border-radius:0px;">
                      <center>
                        <label class="col-md-12 btn leader_div" onclick="callme(this)" style="padding:0px;margin:0px;border-radius:0px;">
                          <div class="col-md-12">
                            <center>
                              <%= f.radio_button :team_profile_id, tp.id, style:"display:none;"%>
                              <%= image_tag(tp.avatar.url(:thumb), {id: "team_image",  style: "width:120px;height:120px;",class: "img-thumbnail img-circle",alt: "User Profile Image"}) %>
                              <h6 class="heading_text inner_div" style="color: #1E8449;"><%= tp.name%></h6>
                            </center>
                          </div>
                        </label>
                      </center>
                    </div>
                  <% end %>
                <% end %>

                <% if @count == 0%>
                  <div class="form-group login_signup_panel" style="padding:0px;margin:0px;border-radius:0px;">
                    <center>
                      <label class="col-md-12 btn leader_div" style="padding:0px;margin:0px;border-radius:0px;">
                        <div class="col-md-12">
                          <center>
                            <h6 class="heading_text inner_div" style="color: #1E8449;">No Team Available</h6>
                          </center>
                        </div>
                      </label>
                    </center>
                  </div>
                <%end%>


                <br>
                <div class="row">
                  <div class="form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                      <center>
                        <%= f.submit "Create Leader",class: 'btn btn-block btn-success', style: "font-weight:bold;font-family: 'Merriweather', serif;" %>
                        <br><br>
                        <%= link_to "Back", leaders_path,class: 'btn btn-block btn-info', style: "font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;" %>
                      </center>
                    </div>
                    <div class="col-md-4"></div>
                  </div>
                </div>
              <%end%>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- *************************** Start Script for Uploading Image in Post ************************* -->
<script>
	$(document).ready(function() {
		$("#post-upload").on('change', function() {
			//Get count of selected files
			var countFiles = $(this)[0].files.length;
			var imgPath = $(this)[0].value;
			var extn = imgPath.substring(imgPath.lastIndexOf('.') + 1).toLowerCase();
			var image_holder = $("#postImage-holder");
			image_holder.empty();
			if (extn == "gif" || extn == "png" || extn == "jpg" || extn == "jpeg") {
				if (typeof(FileReader) != "undefined") {
					//loop for each file selected for uploaded.
					for (var i = 0; i < countFiles; i++)
					{
						var reader = new FileReader();
						reader.onload = function(e) {
							$('#postimg').attr('src', e.target.result);
              $('#team_image').attr('src', e.target.result);
						}
						image_holder.show();
						reader.readAsDataURL($(this)[0].files[i]);
					}
				} else {
					alert("This browser does not support FileReader.");
				}
			}else {
				alert("Please select only images");
			}
		});
	});
</script>
<!-- *************************** End Script for Uploading Image in Post ************************* -->
