<!-- Starting Bootsrap Modal for Add Medical Condition-->
<div class="row">
  <center>
    <div class="container">
      <div class="modal fade" id="addMedicalCondition">
        <div class="modal-dialog">
          <div class="modal-content">
            <form id="form">
              <!-- Header -->
              <div class="modal-header" style="background: #2DBF7F;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <center><h4 class="heading_text">Add Medical Condition</h4></center>
              </div>
              <!-- Body (form) -->
              <div class="modal-body">
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <center>
                        <div class="row">
                          <div class="col-md-1"></div>
                          <div class="col-md-10">

                            <div class="row">
                              <div class="col-md-4">
                                <%= label_tag :condition, "Condition", class:"profile_label", style: "margin-top:0.5em;" %>
                              </div>
                              <div class="col-md-8">
                                <%= text_field_tag :condition, nil, {id: "condition", placeholder: 'Like Diabetes, High Blood Pressure etc', class: 'form-control my_text_field', style:"color: #1E8449;"}%>
                                <h4 id="condition_error" class="detail_error">Medical Condition is Required</h4>
                              </div>
                            </div>

                            <div class="row" style="margin-top: 0.5em;">
                              <div class="col-md-4">
                                <%= label_tag :note, "Notes", class:"profile_label", style: "margin-top:0.5em;" %>
                              </div>
                              <div class="col-md-8">
                                <%= text_area_tag :note, nil, {id: "note", placeholder: 'Enter Your Notes', class: 'form-control my_text_field', style:"color: #1E8449;resize: none;", size: "30x10"}%>
                              </div>
                            </div>

                          </div>
                          <div class="col-md-1"></div>
                        </div>
                      </center>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <center>
                  <h4 id="mc_error" class="detail_error">Unrecognized Error! Try Again Later</h4>
                  <%= image_tag ("loading.gif"), id:"loading_MC", class: 'img-responsive', style: "display:none;margin-left:39%;width:32px;height:32px;position:absolute;" %>
                  <% if team_signed_in? %>
                    <button id="add_medical_condition" onclick="addMC(<%= @leader.id%>)" type="button" class='btn btn-large btn-info' style="font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;">Save</button>
                  <%elsif user_signed_in?%>
                    <button id="add_medical_condition" onclick="addMC(<%= @profile.id%>)" type="button" class='btn btn-large btn-info' style="font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;">Save</button>
                  <%end%>
                  <button type="button" class="btn btn-danger" data-dismiss="modal" style="color:#C0392B;">Close</button>
                </center>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </center>
</div>
<!-- Ending Bootsrap Modal for Add Medical Condition-->
<!-- Starting Bootsrap Modal for Edit Medical Condition-->
<div class="row">
  <center>
    <div class="container">
      <div class="modal fade" id="updateCondition" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <!-- Header -->
            <div class="modal-header" style="background: #2DBF7F;">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <center><h4 class="heading_text">Edit Medical Condition</h4></center>
            </div>
            <!-- Body (form) -->
            <div class="modal-body">
              <div class="form-group">
                <div class="row">
                  <div class="col-md-12">
                    <center>
                      <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">

                          <div class="row">
                            <div class="col-md-4">
                              <%= label_tag :condition, "Condition", class:"profile_label", style: "margin-top:0.5em;" %>
