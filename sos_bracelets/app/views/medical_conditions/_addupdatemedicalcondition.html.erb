                <%elsif user_signed_in?%>
                  <button id="updte_medical_condition" onclick="update_medical_condition(<%= @profile.id%>)" type="button" class='btn btn-large btn-info' style="font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;">Save</button>
                <%end%>
                <button type="button" class="btn btn-danger" data-dismiss="modal" style="color:#C0392B;">Close</button>
              </center>
            </div>
          </div>
        </div>
      </div>
    </div>
  </center>
</div>
<!-- Ending Bootsrap Modal for Edit Medical Condition-->
