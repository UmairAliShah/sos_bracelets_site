<!-- Starting Bootsrap Modal for Add Medication-->
<div class="row">
  <center>
    <div class="container">
      <div class="modal fade" id="addMedication">
        <div class="modal-dialog">
          <div class="modal-content">
            <form id="form">
              <!-- Header -->
              <div class="modal-header" style="background: #2DBF7F;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <center><h4 class="heading_text">Add Medication</h4></center>
              </div>
              <!-- Body (form) -->
              <div class="modal-body">
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <center>
                        <div class="row">
                          <div class="col-md-1"></div>
                          <div class="col-md-10">

                            <div class="row">
                              <div class="col-md-4">
                                <%= label_tag :name, "Name", class:"profile_label", style: "margin-top:0.5em;" %>
                              </div>
                              <div class="col-md-8">
                                <%= text_field_tag :name, nil, {id: "medication_name", placeholder: 'Enter Medication Name', class: 'form-control my_text_field', style:"color: #1E8449;"}%>
                                <h4 id="medication_name_error" class="detail_error">Name is Required</h4>
                              </div>
                            </div>

                            <div class="row" style="margin-top: 0.5em;">
                              <div class="col-md-4">
                                <%= label_tag :dosage, "Dosage", class:"profile_label", style: "margin-top:0.5em;" %>
                              </div>
                              <div class="col-md-8">
                                <%= text_field_tag :dosage, nil, {id: "medication_dosage", placeholder: 'Enter Dosage', class: 'form-control my_text_field', style:"color: #1E8449;"}%>
                              </div>
                            </div>

                            <div class="row" style="margin-top: 0.5em;">
                              <div class="col-md-4">
                                <%= label_tag :frequency, "Frequency", class:"profile_label", style: "margin-top:0.5em;" %>
                              </div>
                              <div class="col-md-8">
                                <%= text_field_tag :frequency, nil, {id: "medication_frequency", placeholder: 'Enter Frequency', class: 'form-control my_text_field', style:"color: #1E8449;"}%>
                              </div>
                            </div>

                            <div class="row" style="margin-top: 0.5em;">
                              <div class="col-md-4">
                                <%= label_tag :note, "Notes", class:"profile_label", style: "margin-top:0.5em;" %>
                              </div>
                              <div class="col-md-8">
                                <%= text_area_tag :note, nil, {id: "medication_note", placeholder: 'Specify Additional Notes', class: 'form-control my_text_field', style:"color: #1E8449;resize: none;", size: "30x10"}%>
                              </div>
                            </div>

                          </div>
                          <div class="col-md-1"></div>
                        </div>
                      </center>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <center>
                  <h4 id="medication__error" class="detail_error">Unrecognized Error! Try Again Later</h4>
                  <%= image_tag ("loading.gif"), id:"loading_medication", class: 'img-responsive', style: "display:none;margin-left:39%;width:32px;height:32px;position:absolute;" %>
                  <% if team_signed_in? %>
                    <button id="add_medication" onclick="addmedication(<%= @leader.id%>)" type="button" class='btn btn-large btn-info' style="font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;">Save</button>
                  <%elsif user_signed_in?%>
                    <button id="add_medication" onclick="addmedication(<%= @profile.id%>)" type="button" class='btn btn-large btn-info' style="font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;">Save</button>
                  <%end%>
                  <button type="button" class="btn btn-danger" data-dismiss="modal" style="color:#C0392B;">Close</button>
                </center>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </center>
</div>
<!-- Ending Bootsrap Modal for Add Medication-->
