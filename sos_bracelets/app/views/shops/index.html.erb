<% content_for :title, "Our Products | SOS Bracelets" %>
<div class="new">
  <div class="container">

    <div class="new-info">


      <div class="clearfix"> </div>
    </div>
  </div>
</div>

<!--//new-->
<!--gallery-->
<div class="container-fluid gallery">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
      <h3 class="title">Our<span> Products</span></h3>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit curabitur </p>
    </div>
    <div class="row">
      <center>
         <div class="container">
            <div class="modal fade" id="productDetail">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                       <!-- Header -->
                       <div class="modal-header" style="background: #2DBF7F;">
                           <button type="button" class="close" data-dismiss="modal">&times;</button>
                           <center><h4 class="heading_text">Product Detail</h4></center>
                       </div>
                       <!-- Body (form) -->
                       <div class="modal-body">
                           <div class="row">
                             <div class="col-md-12">
                               <center>
                                  <div class="row">
                                     <div class="col-xs-12 col-md-4">
                                        <div class="form-group">
                                           <%= image_tag("user.png", {id: "showpimg", style: "width:250px;height:250px;",class: "img-thumbnail img-circle",alt: "Product Image"}) %>
                                        </div>
                                     </div>
                                     <div class="col-xs-12 col-md-8">
                                       <div class="form-group" style="margin-top:0.5em;">
                                          <div class="col-md-3">
                                              <%= label :title, "Title:",class: "login_signup_label"%>
                                          </div>
                                          <div class="col-md-9">
                                            <%= text_field_tag :title, nil, {id: "showptitle", class: 'form-control my_text_field', style:"color: #1E8449;"}%>
                                          </div>
                                       </div>
                                       <div class="form-group" style="margin-top:4.5em;">
                                         <div class="col-md-3">
                                             <%= label :price, "Price:",class: "login_signup_label" %>
                                         </div>
                                         <div class="col-md-9">
                                             <%= text_field_tag :title, nil, {id: "showpprice", class: 'form-control my_text_field', style:"color: #1E8449;"}%>

                                         </div>
                                       </div>
                                       <div class="form-group" style="margin-top:8.5em;">
                                          <div class="col-md-3">
                                              <%= label :description, "desc",class: "login_signup_label" %>
                                          </div>
                                          <div class="col-md-9" >
                                              <%= text_field_tag :title, nil, {id: "showpdescription", class: 'form-control my_text_field', style:"color: #1E8449;"}%>

                                          </div>
                                       </div>
                                       <div class="form-group" style="margin-top:12.5em;">
                                          <div class="col-md-3">
                                              <%= label :quantity, "Quantity:",class: "login_signup_label" %>
                                          </div>
                                          <div class="col-md-9" >
                                            <%= number_field(:product, :quantity, min:1, in: 1.0..20.0, step: 1, style:"color: #1E8449;", class: 'my_text_field col-xs-6', required: true) %>


                                          </div>
                                       </div>
                                     </div>
                                  </div>
                               </center>
                             </div>
                           </div>
                          <div class="form-group">
                                <div class="row">
                                     <div class="col-md-12">
                                          <center>
                                              <div class="row">
                                                  <center>
                                                       <button type="button" class="btn btn-success" data-dismiss="modal" style="margin-top:1em;">Add To Cart</button>
                                                  </center>
                                              </div>
                                          </center>
                                     </div>
                                </div>
                           </div>
                       </div>
                       <div class="modal-footer">
                           <center><button type="button" class="btn btn-danger" data-dismiss="modal" style="color:#C0392B;">Close</button></center>
                       </div>
                    </div>
                </div>
            </div>
         </div>
      </center>
    </div>

    <div class="gallery-info">
     <% @items.each do |item| %>
      <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s" style="margin:0.7em;">
        <a id="showProductDetail" data-toggle="modal" data-target="#productDetail" href="#productDetail" data-pid="<%= item.id %>" data-ptitle="<%= item.title %>" data-pprice="<%= item.price%>" data-pdescription="<%= item.description %>" data-pimg="<%= item.avatar %>">
          <%= image_tag(item.avatar, { class:"img-responsive img-thumbnail", alt: "Product Image"} )  %>
        </a>
        <div class="gallery-text simpleCart_shelfItem">
          <h5><a class="name" href="single.html"><%= item.title %> </a></h5>
          <p><span class="item_price"><%= item.price%>$</span></p>
          <%= form_for(@order_item) do |f| %>
             <%= f.hidden_field :product_id, value: item.id %>

             <br>
             <%= f.text_field :quantity, value: 1, min: 1 %>
             <br>
             <%= f.submit "Add To Cart"%>
          <% end %>
        </div>
      </div>

     <% end %>
      <div class="clearfix"></div>
    </div>
</div>
<div style="margin-left:400px">
     <%= will_paginate @items, renderer: BootstrapPagination::Rails, previous_label: "Older", next_label: "Newer", inner_window: 1, outer_window: 0 %>
</div>
