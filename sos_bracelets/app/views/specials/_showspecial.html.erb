<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3" style="background-color:#229954;color:#F0F0F0;">
        <div class="btn-group">
            <h5 class="btn" style="font-family: 'Merriweather', serif;margin:0px 0px 0px 0px;padding-top:15px;text-align:center;float:left;font-size: 1.2em;border-color: #229954; border-radius:0px 0px 0px 0px;color:#F0F0F0;">Special Instructions</h5>
        </div>
      </div>
      <div class="col-md-9">
      </div>
    </div>
    <div class="row jumbotron" style="border-top-left-radius: 0px;border-top-right-radius: 0px;padding:0px;">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead class="th_bg supervisor_thead">
            <tr>
              <th scope="col"><center> Special Instructions </center></th>
              <th scope="col"><center> Notes </center></th>
            </tr>
          </thead>
          <tbody>
            <% @specials.each do |s|%>
              <tr>
                <td><%= label_tag :name, s.name, {class: "form-control my_text_field", style:"color: #1E8449;height:auto;"} %></td>
                <td><%= label_tag :notes, s.notes, {class: "form-control my_text_field", style:"color: #1E8449;height:auto;"} %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
