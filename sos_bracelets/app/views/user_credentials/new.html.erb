<% content_for :title, "Set Password | SOS Bracelets" %>
<div class="container" style="padding-top: 37px;">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 no-pad-xs">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h3 class="heading_text">Set Account Password</h3></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-bottom:1em; background-color: rgba(255,255,255,0.9); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-8 login_signup_panel">
            <center>
              <%= form_for :user, url: user_credentials_path(id: @user.id), :html => {class: "form-horizontal center"} do |f| %>
                <% if @user.errors.any? %>
                  <div class="form-group alert alert-error alert-block" id="error_explanation">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <h5 class="heading_error"><%= pluralize(@user.errors.count, "error") %> prohibited this ACCOUNT from being saved:</h5>
                    <% @user.errors.full_messages.each do |msg| %>
                        <h6 class="heading_error"><%= msg%></h6>
                    <% end %>
                  </div>
                <%end%>

                <div class="row">
                  <div class="col-md-1"></div>
                  <div class="col-md-10">
                    <div class="form-group">
                      <%= f.label :password, class: "login_signup_label" %><br />
                      <%= f.password_field :password, autofocus: true, placeholder: 'Enter Password', class: 'form-control my_text_field', style:"color: #1E8449;", required: true%>
                    </div>
                    <div class="form-group">
                      <%= f.label :password_confirmation, "Password Confirmation", class: "login_signup_label" %><br />
                      <%= f.password_field :password_confirmation, autofocus: true, placeholder: 'Confirm Your Password', class: 'form-control my_text_field', style:"color: #1E8449;", required: true%>
                    </div>
                  </div>
                  <div class="col-md-1"></div>
                </div>
                <div class="row">
                  <div class="form-group">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                      <center>
                        <%= f.submit "Create Account",class: 'btn btn-block btn-success', style: "font-weight:bold;font-family: 'Merriweather', serif;" %>
                      </center>
                    </div>
                    <div class="col-md-3"></div>
                  </div>
                </div>
              <%end%>
            </center>
          </div>
          <div class="col-md-2"></div>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
